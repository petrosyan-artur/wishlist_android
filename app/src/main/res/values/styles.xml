<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
    </style>


    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="PinEdittext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:digits">0123456789</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:inputType">numberPassword</item>
    </style>

    <style name="KeypadNumber">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@drawable/pin_digits_bg</item>
    </style>

</resources>
