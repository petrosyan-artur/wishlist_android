<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/wish_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wish_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wslb3199"/>

        <TextView
            android:id="@+id/wish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="02/02/2016"/>

        <TextView
            android:id="@+id/wish_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/wish_user_name"
            android:text="Lorem ipsum dolor sit amet, vel vehicula, dui sollicitudin vestibulum tellus morbi. Parturient massa at massa luctus nulla, augue sit et dolor. Tincidunt nullam tempor pede, vel nulla amet lorem magna nonummy ipsum"/>


        <ImageView
            android:id="@+id/wish_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/wish_likes"
            android:layout_alignBottom="@+id/wish_likes"
            android:src="@drawable/wish_like_btn"/>

        <TextView
            android:id="@+id/wish_likes"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_below="@+id/wish_text"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="5"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>